
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-content" class="row login-register">
    <div class="col-md-offset-2 col-md-4">

        <h1>Join Game</h1>

        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.Label("Code: ")
                <div>
                    @Html.TextBox("leagueCode", null, new { @class = "form-control" })
                    <input type="submit" value="Enter" class="btn btn-success" />
                </div>
            </div>
        }
    </div>

    <div class="col-md-4 vertical-line">
        <h1>Create Game</h1>

        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.Label("Name:")
                <div>
                    @Html.TextBox("leagueCode", null, new { @maxlength = "32", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Start week:")
                <div>
                    @Html.DropDownList("startWeek", new SelectList(
                new List<Object>{
                    new { value = 6 , text = "19/09/2015" },
                    new { value = 7 , text = "26/09/2015" },
                    new { value = 8 , text = "03/10/2015" },
                    new { value = 9 , text = "10/10/2015" },
                    new { value = 10 , text = "17/10/2015" },
                    new { value = 11 , text = "24/10/2015" }
                }))
                </div>
            </div>
            <input type="submit" value="Enter" class="btn btn-success" />
        }
    </div>
</div>
