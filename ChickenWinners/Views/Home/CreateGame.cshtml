@model ChickenWinners.ViewModels.CreateGameViewModel

<h1>Create Game</h1>

@using (Html.BeginForm("CreateGame", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        <div>
            @Html.EditorFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Sport)
        <div>
            @Html.DropDownListFor(m => m.Sport, 
                                  new SelectList(Model.Sports, "Id", "Name"),
                                  new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Sport)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StartWeek)
        <div>
            @Html.DropDownListFor(m => m.StartWeek, 
                                  Enumerable.Range(1, 38).Select(i => new SelectListItem { 
                                      Text = i.ToString(), 
                                      Value = i.ToString()
                                  }),
                                  new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.StartWeek)
        </div>
    </div>
    
    <input type="submit" value="Enter" class="btn btn-success" />
}