@model IEnumerable<ChickenWinners.Models.Sport>

@{
    ViewBag.Title = "Sport";
}

<h2>Sport</h2>

<p>
    @Html.Partial("_createSport")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    @foreach (var sport in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => sport.Name)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteSport", new { id = sport.Id })
            </td>
        </tr>
    }
</table>
